<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <style>
      table {
        border: 1px solid #262626;
      }
      th {
        width: 200px;
        text-align: left;
        background-color: #262626;
        color: #f5f5f5;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <section>
      <div>
        <h1>Home Page</h1>

        <div>
          <h3>User Info</h3>

          <% if (users) { %>

          <table>
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>City</th>
                <th>Website</th>
              </tr>
            </thead>

            <tbody>
              <% users.forEach(item => { %>

              <tr>
                <td><%= item.fullName %></td>
                <td><%= item.username %></td>
                <td><%= item.email %></td>
                <td><%= item.phone %></td>
                <td><%= item.city %></td>
                <td><%= item.website %></td>
              </tr>

              <% }); %>
            </tbody>
          </table>

          <% } %>
        </div>

        <div>
          <h3>Other Links</h3>
          <a href="/login">Login Page</a>
        </div>
      </div>
    </section>
  </body>
</html>
